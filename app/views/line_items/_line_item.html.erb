<% if line_item == @current_item %>
<div id="current_item" "row span6"></div>
<% else %>
<div class="row">
<% end %>
	<div class="span"><%= image_tag line_item.product.thumb_url, :class => "thumbnail" %></div>
	<div class="span1"><h6><%= truncate(line_item.product.title, :length => 35) %> <br /><div>
		
		<div style="margin-top:6px;">
			<span style="margin-top:10px;" class="badge badge-inverse"><%= line_item.quantity %></span>
		</div>
	</div>
</div>
	<div class="span1 item_price"><%= number_to_currency(line_item.total_price) %>
		<br>
		<br>
		&nbsp;
	<%= link_to line_items_path(product_id: line_item.product), :style => "margin-top:8px;", :remote => "true", method: :post do %>
			<i class="icon-plus-sign icon-white"></i>
		<% end %>
		<br>
		&nbsp;
		<%= link_to line_items_decrement_path(:id => line_item.id), :method => :post, :remote => true do %>
			<i class="icon-minus-sign icon-white"></i>
		<% end %>
		</div>
</div>