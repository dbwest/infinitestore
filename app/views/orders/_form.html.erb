<div class="well" style="padding:10px; padding-bottom:0px;" ><%= form_for(@order) do |f| %>
    <% if @order.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@order.errors.count, "error") %> prohibited this order from being saved:</h2>
  
        <ul>
        <% @order.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    <% end %>
  
    <div class="control-group" style="padding-left:3px" >
      <div class="field">
        <%= f.label :name, :class => "control-label", :for => "inputIcon" %>
        <div class="controls">
          <div class="input-prepend">
            <span class="add-on">
              <i class="icon-user"></i>
            </span>
              <%= f.text_field :name, size: 40 %>
          </div>
        </div>
      </div>
      <div class="control-group">
        <div class="field">
          <%= f.label :address, :class => "control-label", :for => "inputIcon" %>
          <div class="controls">
            <div class="input-prepend">
              <span class="add-on">
                <i class="icon-home"></i>
              </span>
                <%= f.text_area :address, rows: 3, cols: 40 %>
            </div>
          </div>
        </div>
      </div>
      <div class="field">
        <%= f.label :email, :class => "control-label", :for => "inputIcon" %>
        <div class="controls">
          <div class="input-prepend">
            <span class="add-on">
              <i class="icon-envelope"></i>
            </span>
            <%= f.email_field :email, size: 40 %>
          </div>
        </div>
      </div>
      <div class="field">
        <%= f.label :pay_type, :class => "control-label", :for => "inputIcon" %>
        <div class="controls">
          <div class="input-prepend">
            <span class="add-on">
              <i class="icon-th-large"></i>
            </span>
            <%= f.select :pay_type, Order::PAYMENT_TYPES, prompt: 'Select a payment method' %>
          </div>
        </div>
      </div>
        <br />
      <div class="actions">
        <%= f.submit 'Place Order', :class => "btn btn-primary" %>
      </div>
    </div>
  <% end %></div>
