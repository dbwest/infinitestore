<div class="offset3"><h1>Listing products</h1>
  
  <table class="table table-stripe">
    <tr>
      <th>Thumbnail</th>
      <th>Price</th>
      <th></th>
      <th></th>
      <th></th>
      <th>Title</th>
    </tr>
  
  <% @products.each do |product| %>
    <tr>
      <td><%= image_tag product.thumb_url %></td>
      <td><%= product.price %></td>
      <td><%= link_to 'Show', product %></td>
      <td><%= link_to 'Edit', edit_product_path(product) %></td>
      <td><%= link_to 'Destroy', product, confirm: 'Are you sure?', method: :delete %></td>
      <td><%= product.title %></td>
    </tr>
  <% end %>
  </table>
  
  <br />
  
  <%= link_to 'New Product', new_product_path %></div>
