<div class="offset3">
	<div class="span4"><h1>Editing product</h1>
		<%= render 'form' %>
		
		<%= link_to 'Show', @product %> |
		<%= link_to 'Back', products_path %>
	</div>
	<div class="span3">
		<%= image_tag @product.image_url, :class => "thumbnail" %>
		<p>
	  <b>Title:</b>
	  <%= @product.title %>
	</p>
	
	<p>
	  <b>Description:</b>
	  <%= @product.description %>
	</p>
	
	<p>
	  <b>Image url:</b>
	  <%= @product.image_url %>
	</p>
	
	<p>
	  <b>Price:</b>
	  <%= @product.price %>
	</p>
		
	</div>
</div>
